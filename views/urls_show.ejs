<%- include ("partials/header") %>
  <section>
    <article class="container">
      <div class="row">
        <div class="col-6">
          <h7>TinyURL for <%= longURL %></h7>
          <a href="<%= longURL %>"><%= shortURL %></a>
        </div>
        <a href="/urls">See All Urls</a>
        <div class="col-6">
          <h4>Edit url</h4>
          <form method="POST" action="/urls/<%= shortURL %>/update">
            <input class="form-control" type="text" name="longURL" placeholder="<%= longURL %>" style="width: 300px; margin: 1em">
            <input type="submit" value="Update" />
          </form>
        </div>
      </div>
    </article>
  </section>